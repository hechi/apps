	        <field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<primary>true</primary>
			</field>
			<field>
				<name>groupid</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>admin</name>
				<type>text</type>
				<notnull>true</notnull>
